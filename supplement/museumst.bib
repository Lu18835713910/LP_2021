journal = {Lung Cancer},
keywords = {Adenocarcinoma in situ of the lung,Formalin-fixed paraffin embedded (FFPE),Gene expression,Invasive lung adenocarcinoma,Laser capture microdissection (LCM),LincRNA,RNA-Seq},
month = {jul},
number = {1},
pages = {31--39},
pmid = {24735754},
publisher = {Elsevier Ireland Ltd},
title = {{Identification of mRNAs and lincRNAs associated with lung cancer progression using next-generation RNA sequencing from laser micro-dissected archival FFPE tissue specimens}},
url = {https://linkinghub.elsevier.com/retrieve/pii/S016950021400141X},
