   issn = {14656914},
   issue = {12},
   journal = {Genome biology},
   keywords = {Animal Genetics and Genomics,Bioinformatics,Evolutionary Biology,Human Genetics,Microbial Genetics and Genomics,Plant Genetics and Genomics},
   month = {12},
   pages = {research0088.1},
   pmid = {12537577},
   publisher = {BioMed Central},
   title = {Systematic determination of patterns of gene expression during Drosophila embryogenesis.},
   volume = {3},
   url = {http://genomebiology.biomedcentral.com/articles/10.1186/gb-2002-3-12-research0088},
   year = {2002},
}
