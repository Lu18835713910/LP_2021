journal = {PLOS Genetics},
keywords = {Drosophila,Drosophila melanogaster,Embryonic pattern formation,Embryos,Gene expression,Gene regulation,Invertebrate genomics,Single nucleotide polymorphisms},
month = {nov},
number = {11},
pages = {e1007631},
