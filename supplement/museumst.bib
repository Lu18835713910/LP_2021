}
@article{Siegert2009,
abstract = {The mammalian brain is assembled from thousands of neuronal cell types that are organized in distinct circuits to perform behaviorally relevant computations. Transgenic mouse lines with selectively marked cell types would facilitate our ability to dissect functional components of complex circuits. We carried out a screen for cell type-specific green fluorescent protein expression in the retina using BAC transgenic mice from the GENSAT project. Among others, we identified mouse lines in which the inhibitory cell types of the night vision and directional selective circuit were selectively labeled. We quantified the stratification patterns to predict potential synaptic connectivity between marked cells of different lines and found that some of the lines enabled targeted recordings and imaging of cell types from developing or mature retinal circuits. Our results suggest the potential use of a stratification-based screening approach for characterizing neuronal circuitry in other layered brain structures, such as the neocortex. {\textcopyright} 2009 Nature America, Inc. All rights reserved.},
