}
@article{Bard1998,
   abstract = {This paper reports an internet-accessible database of mouse developmental anatomy (DMDA) that currently holds a hierarchy of the names and synonyms of the tissues in the first 22 Theiler stages of development (E1-E13.5), together with other appropriate information. The purposes of the database are to provide, first, a nomenclature for analyzing normal and mutant mouse anatomy, and second, a language for inputting, storing and querying gene-expression and other spatially organized data. DMDA currently contains some 6900 named and staged tissues (e.g. 360 and 1161 tissues in Theiler stage (TS) 14 (E9) and TS22 (E13.5) embryos). DMDA will be extended to include further lineage and other data when it becomes available. The database can be interactively accessed over the internet using either a Java or a non-Java WWW browser at http://genex.hgu.mrc.ac.uk/.},
