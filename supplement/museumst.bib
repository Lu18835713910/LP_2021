issn = {1471-2105},
journal = {BMC Bioinformatics},
keywords = {Algorithms,Bioinformatics,Computational Biology/Bioinformatics,Computer Appl. in Life Sciences,Microarrays},
month = {dec},
number = {1},
pages = {372},
pmid = {24373308},
publisher = {BioMed Central},
title = {{A mesh generation and machine learning framework for Drosophila gene expression pattern image analysis}},
url = {http://bmcbioinformatics.biomedcentral.com/articles/10.1186/1471-2105-14-372},
volume = {14},
year = {2013}
}
@article{Xu2020,
abstract = {Summary Viral tracers are important tools for neuroanatomical mapping and genetic payload delivery. Genetically modified viruses allow for cell-type-specific targeting and overcome many limitations of non-viral tracers. Here, we summarize the viruses that have been developed for neural circuit mapping, and we provide a primer on currently applied anterograde and retrograde viral tracers with practical guidance on experimental uses. We also discuss and highlight key technical and conceptual considerations for developing new safer and more effective anterograde trans-synaptic viral vectors for neural circuit analysis in multiple species.},
author = {Xu, Xiangmin and Holmes, Todd C and Luo, Min-Hua and Beier, Kevin T and Horwitz, Gregory D and Zhao, Fei and Zeng, Wenbo and Hui, May and Semler, Bert L and Sandri-Goldin, Rozanne M},
