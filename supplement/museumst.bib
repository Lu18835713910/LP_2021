pmid = {17645804},
publisher = {BioMed Central},
title = {{Global analysis of patterns of gene expression during Drosophila embryogenesis}},
url = {http://genomebiology.biomedcentral.com/articles/10.1186/gb-2007-8-7-r145},
volume = {8},
year = {2007}
}
