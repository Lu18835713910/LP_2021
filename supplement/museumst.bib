   year = {2021},
}
@article{Patrick2021,
   abstract = {Highly multiplexed in situ imaging cytometry assays have made it possible to study the spatial organisation of numerous cell types simultaneously. We have addressed the challenge of quantifying complex multi-cellular relationships by proposing a statistical method which clusters local indicators of spatial association. Our approach successfully identifies distinct tissue architectures in datasets generated from three state-of-the-art high-parameter assays demonstrating its value in summarising the information-rich data generated from these technologies.Competing Interest StatementThe authors have declared no competing interest.},
   author = {Ellis Patrick and Nicolas P Canete and Sourish S Iyengar and Andrew N Harman and Greg T Sutherland and Pengyi Yang},
