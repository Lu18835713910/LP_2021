   journal = {Cell},
   keywords = {metabolism,mucosal immunology,single-cell transcriptomics,spatial transcriptomics,systems biology},
   month = {11},
   pages = {1156-1167.e15},
   pmid = {30270040},
   publisher = {Cell Press},
   title = {Spatial Reconstruction of Single Enterocytes Uncovers Broad Zonation along the Intestinal Villus Axis},
   volume = {175},
   url = {https://doi.org/10.1016/j.cell.2018.08.063},
   year = {2018},
}
