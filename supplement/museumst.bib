   journal = {Lung Cancer},
   keywords = {Adenocarcinoma in situ of the lung,Formalin-fixed paraffin embedded (FFPE),Gene expression,Invasive lung adenocarcinoma,Laser capture microdissection (LCM),LincRNA,RNA-Seq},
   month = {7},
   pages = {31-39},
