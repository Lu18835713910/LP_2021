doi = {10.3389/fnins.2012.00130},
issn = {1662-4548},
journal = {Frontiers in Neuroscience},
keywords = {Autonomic nervous system,Genitourinary,Genitourinary development molecular anatomy projec,In situ hybridization,Lower urinary tract,Mouse,Pelvic ganglia,Transcription factor},
month = {sep},
number = {SEP},
pages = {130},
publisher = {Frontiers},
title = {{A Genome-Wide Screen to Identify Transcription Factors Expressed in Pelvic Ganglia of the Lower Urinary Tract}},
